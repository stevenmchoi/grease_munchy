<!DOCTYPE html>
<html>
  <head>
    <title>Grease Munchy: Faster Fast Food</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Signika:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Padauk:400,500700" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%# <%= favicon_link_tag 'french-fries-147720_640.png' %>
    <%= favicon_link_tag 'mcd.png' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'username': '<%= current_user.username %>'
        };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
